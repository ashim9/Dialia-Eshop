{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announcement-bar color-{{ block.settings.color_scheme }}">
        {%- if block.settings.text != blank -%}
              <div class="page-width">

          <div id="wrapper" class="wrapper">
              <!-- Header Area -->
              <div class="header">
                  <!-- Header Top Area -->
                  <div class="header-toparea">
                      <div class="container">
                          <div class="row align-items-center">
                              <div class="col-md-7 col-sm-6 col-12">
                                  <div class="header-topinfo">
                                      <ul>
                                          <li>Email us : <a href="mailto://contact@example.com">{{ block.settings.text }}</a></li>
                                          <li>Call us : <a href="tel://+1-800-915-6270">{{ block.settings.phone-text }}</a></li>
                                      </ul>
                                  </div>
                              </div>
                              <div class="col-md-5 col-sm-6 col-12">
                                  <div class="header-topbutton">
                                      <a href="#" class="tm-button tm-button-white">{{ block.settings.btn-text }}</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "Announcement-bar",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "a@b.com",
          "label": "Email"
        },
       {
         "type": "text",
         "id": "phone-text",
         "default": "1-800-915-6270",
         "label": "Phone Number"
       },
       {
         "type": "text",
         "id": "btn-text",
         "default": "Book an Appointment",
         "label": "Button Text"
       },
        {
          "type": "color",
          "id": "text-color",
          "label": "Text Color",
          "default": "#333333"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}